{
  "name": "g_car_wash_bot",
  "version": "1.0.0",
  "description": "bot for create order for car wash",
  "main": "/dist/index.js",
  "type": "commonjs",
  "engines": {
    "node": "18.x"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development nodemon src/index.ts",
    "start": "pm2 start ./config/ecosystem.config.js --env production",
    "build": "cross-env NODE_ENV=production npx swc src -d dist",
    "deploy": "yarn --frozen-lockfile && yarn build && yarn start",
    "prepare": "husky install"
  },
  "dependencies": {
    "cron": "^2.4.3",
    "cross-env": "^7.0.3",
    "dotenv": "^16.1.4",
    "express": "^4.18.2",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "mongodb": "^5.6.0",
    "mongoose": "^7.2.3",
    "node-telegram-bot-api": "^0.61.0",
    "pm2": "^5.3.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.84",
    "@swc/helpers": "^0.5.2",
    "@types/express": "^4.17.17",
    "@types/node": "^20.6.0",
    "@types/node-telegram-bot-api": "^0.61.6",
    "@typescript-eslint/eslint-plugin": "^6.7.2",
    "@typescript-eslint/parser": "^6.7.2",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "nodemon": "^2.0.22",
    "prettier": "3.0.3",
    "regenerator-runtime": "^0.14.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "keywords": [
    "telegram",
    "bot"
  ],
  "author": "Yevhen Semeniuk",
  "license": "ISC",
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
